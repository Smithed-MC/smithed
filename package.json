{
  "name": "smithed",
  "version": "0.1.5",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@electron/remote": "^1.2.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/download": "^8.0.1",
    "@types/electron-is-dev": "^1.1.1",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/prop-types": "^15.7.4",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.11",
    "concurrently": "^6.2.0",
    "css-colorize": "^0.0.9-c",
    "download": "^8.0.0",
    "electron-build": "0.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "execa": "^1.0.0",
    "firebase": "^8.8.1",
    "is-running": "^2.1.0",
    "jszip": "^3.7.1",
    "latest-semver": "^4.0.0",
    "linq-es5": "^1.11.15",
    "markdown-to-jsx": "^7.1.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "reactjs-popup": "^2.0.5",
    "semver-compare": "^1.0.0",
    "simple-discord-webhooks": "^1.0.1",
    "slimeball": "^0.0.7-4",
    "styled-components": "^5.3.0",
    "typescript": "^4.1.2",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "electron:build": "yarn build && electron-builder -c.extraMetadata.main=build/electron.js --publish never",
    "electron:pro-build": "npm prune --production && npm run electron:build",
    "electron:publish": "yarn build && electron-builder -c.extraMetadata.main=build/electron.js --publish always",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jquery": "^3.5.6",
    "@types/jszip": "^3.4.1",
    "electron": "^13.1.7"
  },
  "build": {
    "extends": null,
    "appId": "live.thenuclearnexus.smithed",
    "productName": "Smithed",
    "files": [
      "dist/**/*",
      "build/**/*",
      "build/icon.*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "./build/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "default",
      "icon": "./build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "installerIcon": "./build/icon.ico",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "TheNuclearNexus",
      "repo": "smithed",
      "private": false,
      "vPrefixedTagName": false
    }
  }
}
